<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Salman"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="52"/>
    </bean>
    <bean id="movieBean" class="com.stackroute.domain.Movie" autowire="byName">
    </bean>
    <bean id="actorBean" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Hrithik"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="46"/>
    </bean>
    <bean id="movieBean2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actorBean"/>
    </bean>
    <bean id="LifeCycleBean" class="com.stackroute.demo.BeanLifecycleDemoBean" init-method="customInit"
          destroy-method="customDestroy">
    </bean>
    <bean id="PostProcessorBean" class="com.stackroute.demo.BeanPostProcessorDemoBean"></bean>
</beans>